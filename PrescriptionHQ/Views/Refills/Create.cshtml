@model PrescriptionHQ.Models.Refill

@{
    ViewData["Title"] = "Create";
}

<h1>Refill Request</h1>

<h4>Prescription Information</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Prescription.Drug" class="control-label"></label>
                <input asp-for="Prescription.Drug" class="form-control" />
                <span asp-validation-for="Prescription.Drug" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prescription.Dosage" class="control-label"></label>
                <input asp-for="Prescription.Dosage" class="form-control" />
                <span asp-validation-for="Prescription.Dosage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prescription.Quantity" class="control-label"></label>
                <input asp-for="Prescription.Quantity" class="form-control" />
                <span asp-validation-for="Prescription.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prescription.Frequency" class="control-label"></label>
                <input asp-for="Prescription.Frequency" class="form-control" />
                <span asp-validation-for="Prescription.Frequency"Frequency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prescription.Refills" class="control-label"></label>
                <input asp-for="Prescription.Refills" class="form-control" />
                <span asp-validation-for="Prescription.Refills" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prescription.SpecialInstructions" class="control-label"></label>
                <input asp-for="Prescription.SpecialInstructions" class="form-control" />
                <span asp-validation-for="Prescription.SpecialInstructions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prescription.DatePrescribed" class="control-label"></label>
                <input asp-for="Prescription.DatePrescribed" class="form-control" />
                <span asp-validation-for="Prescription.DatePrescribed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prescription.DateFilled" class="control-label"></label>
                <input asp-for="Prescription.DateFilled" class="form-control" />
                <span asp-validation-for="Prescription.DateFilled" class="text-danger"></span>
            </div>
            

            <div class="form-group">
                <input type="submit" value="Submit Refill" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/Prescriptions/GetActivePrescriptions">Back To Active Prescriptions List</a>
</div>

