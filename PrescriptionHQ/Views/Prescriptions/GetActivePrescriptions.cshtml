@model IEnumerable<PrescriptionHQ.Models.Prescription>

@{
    ViewData["Title"] = "GetActivePrescriptions";
}

<h1>Active Prescriptions</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Patient Name
            </th>

            <th>
                Drug
            </th>
            <th>
                Dosage
            </th>
            <th>
                Quantity
            </th>
            <th>
                Frequency
            </th>
            <th>
                Date Prescribed
            </th>
            <th>
                Refills
            </th>
            <th>
                Special Instructions
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Drug)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dosage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Frequency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateFilled)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatePrescribed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Refills)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpecialInstructions)
            </td>
            <td>
                <a asp--area="" asp-controller="Home" asp-action="Privacy" asp-route-patientName="@item.PatientName" asp-route-patientEmail="@item.User.Email" onclick="return alert('Your request was sent to the pharmacy. You will be notified when your prescription is ready for pickup.');">Refill</a>


            </td>
        </tr>
        }
    </tbody>
</table>

