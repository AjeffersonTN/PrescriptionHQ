@model IEnumerable<PrescriptionHQ.Models.Prescription>

@{
    ViewData["Title"] = "Index";
}
<style>
    body {
        background-image: url(https://st3.depositphotos.com/8151032/12775/i/950/depositphotos_127750686-stock-photo-lot-of-colorful-medication-and.jpg);
        background-repeat: no-repeat;
        background-size: cover;
    }

    .display-4 {
        font-weight: 600;
        border-radius: 50%;
        /*transform: rotate(-50deg);*/
        position: center;
    }

    .text-center {
        font-size: large;
        font-weight: 500;
    }
    .card {
        background-color:#f4ffd9;
    }

</style>

<div class="card" style="width: auto;">

    <div class="card-title">
        <h1>Active Prescriptions</h1>
    </div>

    <div class="card-body">
        @using (Html.BeginForm())
        {
            <p>
                Find by name: @Html.TextBox("SearchString")
                <input type="submit" value="Search" />
            </p>
        }

        <p>
            <a asp-action="CreateRequest">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.ActionLink("Patient Name", "Index", new { sortOrder = ViewBag.NameSortParm })
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Drug)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Dosage)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Quantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Frequency)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateFilled)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DatePrescribed)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Refills)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SpecialInstructions)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.FirstName) @Html.DisplayFor(modelItem => item.User.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Drug)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dosage)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Frequency)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateFilled)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DatePrescribed)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Refills)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SpecialInstructions)
                        </td>
                        <td>
                            @*<a href="/Refills/Create">Refill</a>*@
                            <a asp-action="DoctorEdit" asp-route-id="@item.PrescriptionId">Edit</a> |
                            <a asp-action="DoctorDetails" asp-route-id="@item.PrescriptionId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.PrescriptionId">Delete</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

