@model PrescriptionHQ.Models.Prescription

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        background-image: url(https://st3.depositphotos.com/8151032/12775/i/950/depositphotos_127750686-stock-photo-lot-of-colorful-medication-and.jpg);
        background-repeat: no-repeat;
        background-size: cover;
    }

    .display-4 {
        font-weight: 600;
        border-radius: 50%;
        /*transform: rotate(-50deg);*/
        position: center;
    }

    .text-center {
        font-size: large;
        font-weight: 500;
    }
</style>

<div class="card" style="width: auto;">

    <div class="card-title">
        <h1>Delete</h1>
    </div>

    <div class="card-subtitle">

        <h3>Are you sure you want to delete this?</h3>
    </div>
    <div class="card-body">
        <div>
            <h4>Prescription</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Drug)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Drug)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Dosage)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Dosage)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Quantity)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Quantity)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Frequency)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Frequency)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DateFilled)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DateFilled)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DatePrescribed)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DatePrescribed)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SpecialInstructions)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SpecialInstructions)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="PrescriptionId" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</div>