@model PrescriptionHQ.Models.Prescription

@{
    ViewData["Title"] = "RefillStatus";
}

<div class="card" style="width: auto;">

    <div class="card-title">
        <h1>RefillStatus</h1>
    </div>
    <div class="card-subtitle">
        <h4>Prescription</h4>
    </div>
    <hr />
    <div class="card-body">
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="RefillStatus">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="PrescriptionId" />
                    <div class="form-group">
                        <label asp-for="PatientName" class="control-label"></label>
                        <input readonly asp-for="PatientName" class="form-control" />
                        <span asp-validation-for="PatientName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Drug" class="control-label"></label>
                        <input readonly asp-for="Drug" class="form-control" />
                        <span asp-validation-for="Drug" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Dosage" class="control-label"></label>
                        <input readonly asp-for="Dosage" class="form-control" />
                        <span asp-validation-for="Dosage" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Quantity" class="control-label"></label>
                        <input readonly asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Frequency" class="control-label"></label>
                        <input asp-for="Frequency" class="form-control" />
                        <span asp-validation-for="Frequency" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Refills" class="control-label"></label>
                        <input readonly asp-for="Refills" class="form-control" />
                        <span asp-validation-for="Refills" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DateFilled" class="control-label"></label>
                        <input readonly asp-for="DateFilled" class="form-control" />
                        <span asp-validation-for="DateFilled" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DatePrescribed" class="control-label"></label>
                        <input readonly asp-for="DatePrescribed" class="form-control" />
                        <span asp-validation-for="DatePrescribed" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SpecialInstructions" class="control-label"></label>
                        <input readonly asp-for="SpecialInstructions" class="form-control" />
                        <span asp-validation-for="SpecialInstructions" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="hidden" asp-for="RefillRequested" value="In-Process" />
                    </div>
                    <div class="form-group">
                        <label asp-for="UserId" class="control-label"></label>
                        <select readonly asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit Request" class="btn btn-primary" onclick="return alert('Your request was sent to the pharmacy. You will be notified when your prescription is ready for pickup.');" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="GetActivePrescriptions">Back to List</a>
        </div>
    </div>
</div>

